@model IEnumerable<Jaffar_Mall_Rent_Management_System.Models.RentPayment>

@{
    ViewData["Title"] = "Payment History";
}

<!-- Top Header -->
<header class="h-16 flex items-center justify-between px-6 border-b border-[#293038] bg-background-dark shrink-0 z-20">
    <div class="flex items-center gap-4">
        <h2 class="text-lg font-bold text-white">Payment History</h2>
    </div>
    <div class="flex items-center gap-4 flex-1 justify-end">
        <a asp-action="Index" class="text-[#9dabb8] hover:text-white transition-colors text-sm font-medium">Back to Status</a>
    </div>
</header>

<!-- Scrollable Content Area -->
<div class="flex-1 overflow-y-auto p-6 scroll-smooth">
    <div class="max-w-7xl mx-auto space-y-6 pb-10">
        
        <div class="bg-[#1e252b] rounded-xl border border-[#293038] overflow-hidden">
             <div class="p-6 border-b border-[#293038]">
                <h3 class="text-white text-base font-bold">Transaction History</h3>
                 <p class="text-[#9dabb8] text-sm">Lease ID: @ViewBag.LeaseId</p>
            </div>
            
            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead>
                        <tr class="bg-[#293038]/50 text-[#9dabb8] text-xs uppercase tracking-wider">
                            <th class="px-6 py-3 font-semibold">Payment ID</th>
                            <th class="px-6 py-3 font-semibold">Date</th>
                            <th class="px-6 py-3 font-semibold">Method</th>
                            <th class="px-6 py-3 font-semibold text-right">Amount</th>
                            <th class="px-6 py-3 font-semibold">Remarks</th>
                            <th class="px-6 py-3 font-semibold text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-[#293038]">
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr class="hover:bg-[#293038]/30 transition-colors">
                                    <td class="px-6 py-4">
                                        <span class="text-white text-sm">#@item.Id</span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="text-white text-sm">@item.PaymentDate.ToString("MMM dd, yyyy HH:mm")</span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-500/10 text-blue-500">
                                            @item.PaymentMethod
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <span class="text-white text-sm font-bold">@item.Amount.ToString("C")</span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="text-[#9dabb8] text-sm">@item.Remarks</span>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <a asp-action="Voucher" asp-route-id="@item.Id" target="_blank" class="text-primary hover:text-white transition-colors text-sm font-medium flex items-center justify-end gap-1">
                                            <span class="material-symbols-outlined text-[16px]">receipt</span>
                                            Voucher
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="px-6 py-8 text-center text-[#9dabb8]">No payment history found for this lease.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
