@model Jaffar_Mall_Rent_Management_System.Models.ViewModels.VoucherViewModel

@{
    ViewData["Title"] = "Payment Voucher";
    Layout = "_Layout_Blank"; // Assuming a blank layout exists for printing, if not use null or standard
}

<div class="min-h-screen bg-white text-black p-8 font-serif">
    
    <div class="max-w-3xl mx-auto border-2 border-dashed border-gray-800 p-8 relative">
        <!-- Watermark/logo placeholder -->
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 opacity-5 pointer-events-none">
            <h1 class="text-9xl font-bold uppercase rotate-45">PAID</h1>
        </div>

        <!-- Header -->
        <div class="text-center mb-8 border-b-2 border-black pb-4">
            <h1 class="text-4xl font-bold uppercase tracking-widest mb-2">Rent Receipt</h1>
            <p class="text-sm">Jaffar Mall Rent Management System</p>
            <p class="text-sm">123 Mall Avenue, Commercial Center</p>
        </div>

        <!-- Voucher Details -->
        <div class="flex justify-between mb-8">
            <div>
                <p class="text-sm font-bold uppercase text-gray-600">Receipt No:</p>
                <p class="text-xl font-mono">#@Model.Payment.Id.ToString("D6")</p>
            </div>
            <div class="text-right">
                <p class="text-sm font-bold uppercase text-gray-600">Date:</p>
                <p class="text-xl">@Model.Payment.PaymentDate</p>
            </div>
        </div>

        <!-- Tenant Info -->
        <div class="mb-8 p-4 bg-gray-50 border border-gray-200">
             <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-xs font-bold uppercase text-gray-500">Received From</label>
                    <p class="text-lg font-bold">@Model.TenantName</p>
                </div>
                <div>
                     <label class="block text-xs font-bold uppercase text-gray-500">Payment Method</label>
                    <p class="text-lg">@Model.Payment.PaymentMethod</p>
                </div>
             </div>
        </div>

        <!-- Property Info -->
        <div class="mb-8">
            <label class="block text-xs font-bold uppercase text-gray-500 mb-1">For Rental of Property</label>
            <p class="text-xl border-b border-gray-400 pb-1">@Model.PropertyName (@Model.PropertyNumber)</p>
        </div>

        <!-- Payment Breakdown -->
        <div class="mb-8">
            <table class="w-full">
                <thead>
                    <tr class="border-b-2 border-black">
                        <th class="text-left py-2">Description</th>
                        <th class="text-right py-2">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="border-b border-gray-200">
                        <td class="py-4">Rent Payment</td>
                        <td class="text-right py-4 font-bold text-xl">@Model.Payment.Amount.ToString("C")</td>
                    </tr>
                    @if(!string.IsNullOrEmpty(Model.Payment.Remarks))
                    {
                         <tr class="border-b border-gray-200">
                            <td class="py-2 text-sm italic text-gray-500">Note: @Model.Payment.Remarks</td>
                            <td class="text-right py-2"></td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td class="pt-4 text-right font-bold uppercase">Total Received:</td>
                        <td class="pt-4 text-right font-bold text-2xl">@Model.Payment.Amount.ToString("C")</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <!-- Footer -->
        <div class="mt-16 flex justify-between items-end">
            <div class="text-center w-64">
                <div class="border-b border-black mb-2"></div>
                <p class="text-xs uppercase font-bold">Authorized Signature</p>
            </div>
            
            <div class="text-right text-xs text-gray-500">
                <p>Generated on @DateTime.Now.ToString("g")</p>
                <p>By @Model.ReceivedBy</p>
            </div>
        </div>
    </div>
    
    <div class="text-center mt-8 no-print">
        <button onclick="window.print()" class="bg-blue-600 text-white px-6 py-2 rounded-lg font-bold hover:bg-blue-700 shadow-lg transition-colors">
            Print Voucher
        </button>
        <button onclick="window.close()" class="ml-4 bg-gray-500 text-white px-6 py-2 rounded-lg font-bold hover:bg-gray-600 shadow-lg transition-colors">
            Close
        </button>
    </div>
</div>

<style>
    @@media print {
        .no-print {
            display: none;
        }
        body {
            background: white;
            color: black;
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }
    }
</style>
