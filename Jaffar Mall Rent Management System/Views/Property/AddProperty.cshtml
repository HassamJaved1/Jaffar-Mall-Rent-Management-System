<!DOCTYPE html>
<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Add New Property - RentManager</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#197fe6",
                        "background-light": "#f6f7f8",
                        "background-dark": "#111921",
                        "surface-dark": "#1c232d",
                        "border-dark": "#3c4753",
                        "text-secondary": "#9dabb8"
                    },
                    fontFamily: { "display": ["Inter", "sans-serif"] },
                },
            },
        }
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-white overflow-hidden">
    <div class="flex h-screen w-full overflow-hidden">
        <main class="flex-1 flex flex-col h-full overflow-hidden relative">
            <header class="w-full bg-background-light dark:bg-background-dark border-b border-border-dark shrink-0 z-10">
                <div class="max-w-5xl mx-auto px-6 py-5 flex flex-wrap items-center justify-between gap-4">
                    <div>
                        <h1 class="text-2xl md:text-3xl font-black leading-tight tracking-tight text-slate-900 dark:text-white">Add New Property</h1>
                        <p class="text-slate-500 dark:text-text-secondary text-sm mt-1">Fill in the details below to list a new rental unit.</p>
                    </div>
                    <div class="flex gap-3">
                        <button class="px-4 py-2 rounded-lg border border-slate-300 dark:border-border-dark text-slate-700 dark:text-white font-bold text-sm hover:bg-slate-100 dark:hover:bg-surface-dark transition-colors">
                            Cancel
                        </button>
                        <button id="btnSaveProperty" class="px-5 py-2 rounded-lg bg-primary hover:bg-blue-600 text-white font-bold text-sm shadow-lg shadow-blue-500/20 transition-all flex items-center gap-2">
                            <span class="material-symbols-outlined text-[18px]">save</span>
                            Save Property
                        </button>
                    </div>
                </div>
            </header>

            <div class="flex-1 overflow-y-auto p-6">
                <div class="max-w-5xl mx-auto flex flex-col gap-6 pb-20">
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                        <div class="lg:col-span-2 flex flex-col gap-6">
                            <div class="bg-white dark:bg-surface-dark rounded-xl p-6 border border-slate-200 dark:border-border-dark shadow-sm">
                                <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-5 pb-3 border-b border-slate-100 dark:border-border-dark">General Information</h3>
                                <div class="flex flex-col gap-5">
                                    <label class="flex flex-col gap-1.5 w-full">
                                        <span class="text-slate-700 dark:text-white text-sm font-medium">Property Name</span>
                                        <input id="propName" class="w-full rounded-lg border border-slate-300 dark:border-border-dark bg-slate-50 dark:bg-[#111418] text-slate-900 dark:text-white px-4 py-3 text-sm focus:ring-1 focus:ring-primary focus:border-primary outline-none transition-all" placeholder="e.g. Sunset Heights Apartments" type="text" />
                                    </label>
                                    <label class="flex flex-col gap-1.5 w-full">
                                        <span class="text-slate-700 dark:text-white text-sm font-medium">Property Description</span>
                                        <textarea id="propDesc" class="w-full rounded-lg border border-slate-300 dark:border-border-dark bg-slate-50 dark:bg-[#111418] text-slate-900 dark:text-white px-4 py-3 text-sm focus:ring-1 focus:ring-primary focus:border-primary outline-none transition-all resize-none" rows="5"></textarea>
                                    </label>
                                </div>
                            </div>

                            <div class="bg-white dark:bg-surface-dark rounded-xl p-6 border border-slate-200 dark:border-border-dark shadow-sm">
                                <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-5 pb-3 border-b border-slate-100 dark:border-border-dark">Location Details</h3>
                                <div class="flex flex-col gap-5">
                                    <label class="flex flex-col gap-1.5 w-full">
                                        <span class="text-slate-700 dark:text-white text-sm font-medium">Address</span>
                                        <input id="propAddress" class="w-full rounded-lg border border-slate-300 dark:border-border-dark bg-slate-50 dark:bg-[#111418] text-slate-900 dark:text-white px-4 py-3 text-sm focus:ring-1 focus:ring-primary focus:border-primary outline-none transition-all" placeholder="e.g. 123 Main St" type="text" />
                                    </label>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                                        <label class="flex flex-col gap-1.5">
                                            <span class="text-slate-700 dark:text-white text-sm font-medium">City</span>
                                            <input id="propCity" class="w-full rounded-lg border border-slate-300 dark:border-border-dark bg-slate-50 dark:bg-[#111418] text-slate-900 dark:text-white px-4 py-3 text-sm focus:ring-1 focus:ring-primary focus:border-primary outline-none transition-all" placeholder="New York" type="text" />
                                        </label>
                                        <label class="flex flex-col gap-1.5">
                                            <span class="text-slate-700 dark:text-white text-sm font-medium">Country</span>
                                            <input id="propCountry" class="w-full rounded-lg border border-slate-300 dark:border-border-dark bg-slate-50 dark:bg-[#111418] text-slate-900 dark:text-white px-4 py-3 text-sm focus:ring-1 focus:ring-primary focus:border-primary outline-none transition-all" placeholder="United States" type="text" />
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="flex flex-col gap-6">
                            <div class="bg-white dark:bg-surface-dark rounded-xl p-6 border border-slate-200 dark:border-border-dark shadow-sm">
                                <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-5 pb-3 border-b border-slate-100 dark:border-border-dark">Classification</h3>
                                <div class="flex flex-col gap-5">
                                    <label class="flex flex-col gap-1.5 w-full">
                                        <span class="text-slate-700 dark:text-white text-sm font-medium">Property Type</span>
                                        <div class="relative">
                                            <select id="propType" class="w-full appearance-none rounded-lg border border-slate-300 dark:border-border-dark bg-slate-50 dark:bg-[#111418] text-slate-900 dark:text-white px-4 py-3 text-sm focus:ring-1 focus:ring-primary focus:border-primary outline-none transition-all">
                                                <option>Apartment</option>
                                                <option>Single Family House</option>
                                                <option>Condo</option>
                                                <option>Townhouse</option>
                                                <option>Commercial</option>
                                                <option>Industrial</option>
                                            </select>
                                            <span class="material-symbols-outlined absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 pointer-events-none text-lg">expand_more</span>
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        $(document).ready(function () {
            $("#btnSaveProperty").click(function (e) {
                e.preventDefault();

                // 1. Map UI fields to your C# Model properties
                const propertyData = {
                    Name: $("#propName").val(),
                    Address: $("#propAddress").val(),
                    City: $("#propCity").val(),
                    Country: $("#propCountry").val(),
                    Description: $("#propDesc").val(),
                    PropertyType: $("#propType").val()
                };

                // Simple Validation
                if (!propertyData.Name) {
                    alert("Please enter a property name.");
                    return;
                }

                // UI Feedback: Disable button
                const $btn = $(this);
                $btn.prop('disabled', true).addClass('opacity-50').text('Saving...');

                // 2. AJAX POST Request
                $.ajax({
                    url: '/Property/AddProperty', // Replace with your actual [Controller]/[Action]
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(propertyData),
                    success: function (response) {
                        console.log(response);
                        alert("Property saved successfully!");
                        // Optional: Redirect or clear form
                        // window.location.href = '/Property/Index';
                    },
                    error: function (xhr, status, error) {
                        console.error("Error:", error);
                        alert("Failed to save property. Please check the console.");
                    },
                    complete: function() {
                        // Re-enable button
                        $btn.prop('disabled', false).removeClass('opacity-50').html('<span class="material-symbols-outlined text-[18px]">save</span> Save Property');
                    }
                });
            });
        });
    </script>
</body>
</html>