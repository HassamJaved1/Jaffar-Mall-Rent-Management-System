<!DOCTYPE html>
<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewData["Title"] - RentManager</title>
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&amp;display=swap" rel="stylesheet" />
    <!-- Material Symbols -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <!-- Theme Config -->
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#197fe6",
                        "background-light": "#f6f7f8",
                        "background-dark": "#111418", 
                        "surface-dark": "#1a1d23",
                        "element-dark": "#293038",
                        "card-dark": "#1e252b",
                        "card-hover": "#293038",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                    borderRadius: {"DEFAULT": "0.25rem", "lg": "0.5rem", "xl": "0.75rem", "full": "9999px"},
                },
            },
        }
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        /* Custom scrollbar for better aesthetics in dark mode */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #111418;
        }

        ::-webkit-scrollbar-thumb {
            background: #293038;
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #3e4854;
            }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-[#111418] dark:text-white font-display overflow-hidden">
    <div class="flex h-screen w-full">
         <!-- Sidebar -->
        <aside class="w-[280px] hidden md:flex flex-col bg-background-dark border-r border-[#293038] shrink-0 h-full overflow-y-auto">
            <div class="flex h-full flex-col justify-between p-4">
                <div class="flex flex-col gap-6">
                    <!-- Brand -->
                    <div class="flex items-center gap-3 px-2">
                        <div class="bg-center bg-no-repeat bg-cover rounded-lg size-10 bg-primary flex items-center justify-center text-white" data-alt="RentManager Logo">
                            <span class="material-symbols-outlined text-2xl">apartment</span>
                        </div>
                        <h1 class="text-white text-xl font-bold leading-normal tracking-tight">RentManager</h1>
                    </div>
                    <!-- Navigation -->
                    <nav class="flex flex-col gap-2">
                        <a class="flex items-center gap-3 px-3 py-3 rounded-lg hover:bg-[#293038] text-[#9dabb8] hover:text-white transition-colors group" asp-controller="Dashboard" asp-action="Index">
                            <span class="material-symbols-outlined group-hover:text-white transition-colors">dashboard</span>
                            <p class="text-sm font-medium leading-normal">Dashboard</p>
                        </a>
                        <a asp-controller="Property" asp-action="Index" class="flex items-center gap-3 px-3 py-3 rounded-lg hover:bg-[#293038] text-[#9dabb8] hover:text-white transition-colors group">
                            <span class="material-symbols-outlined group-hover:text-white transition-colors">domain</span>
                            <p class="text-sm font-medium leading-normal">Properties</p>
                        </a>
                        <a asp-controller="Tenant" asp-action="Index" class="flex items-center gap-3 px-3 py-3 rounded-lg hover:bg-[#293038] text-[#9dabb8] hover:text-white transition-colors group">
                            <span class="material-symbols-outlined group-hover:text-white transition-colors">group</span>
                            <p class="text-sm font-medium leading-normal">Tenants</p>
                        </a>
                        <a class="flex items-center gap-3 px-3 py-3 rounded-lg hover:bg-[#293038] text-[#9dabb8] hover:text-white transition-colors group">
                            <span class="material-symbols-outlined group-hover:text-white transition-colors">payments</span>
                            <p class="text-sm font-medium leading-normal">Payments</p>
                        </a>
                        <a class="flex items-center gap-3 px-3 py-3 rounded-lg hover:bg-[#293038] text-[#9dabb8] hover:text-white transition-colors group">
                            <div class="relative">
                                <span class="material-symbols-outlined group-hover:text-white transition-colors">home_repair_service</span>
                                <span class="absolute top-0 right-0 size-2 bg-red-500 rounded-full border border-background-dark"></span>
                            </div>
                            <p class="text-sm font-medium leading-normal">Maintenance</p>
                        </a>
                        <a class="flex items-center gap-3 px-3 py-3 rounded-lg hover:bg-[#293038] text-[#9dabb8] hover:text-white transition-colors group" href="#">
                            <span class="material-symbols-outlined group-hover:text-white transition-colors">description</span>
                            <p class="text-sm font-medium leading-normal">Documents</p>
                        </a>
                    </nav>
                </div>
                <div class="flex flex-col gap-4">
                    <div class="px-3">
                        <p class="text-xs font-bold text-[#9dabb8] uppercase tracking-wider mb-2">System</p>
                        <a class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-[#293038] text-[#9dabb8] hover:text-white transition-colors mb-1" href="#">
                            <span class="material-symbols-outlined">settings</span>
                            <p class="text-sm font-medium leading-normal">Settings</p>
                        </a>
                        <a class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-[#293038] text-[#9dabb8] hover:text-white transition-colors" href="#">
                            <span class="material-symbols-outlined">logout</span>
                            <p class="text-sm font-medium leading-normal">Logout</p>
                        </a>
                    </div>
                    <div class="p-4 rounded-xl bg-[#1e252b] border border-[#293038]">
                        <div class="flex items-center gap-3 mb-3">
                            <div class="size-10 rounded-full bg-cover bg-center" data-alt="User profile photo" style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuD2HA0NAXihEVKshNYBbssShVeU35hA1TJkpVOBJQgqGRWQf9Jr__nYfj2IOz52WJSL1jc3CZkK5mwDcI0SUo3wwaPaJx7Htu-HbjUSfRSO6y0uN99EYC3MkoTtZmgscWWq7s46U_bIrLBTnFxBNb0pYbBywUE-bxcUakBvbwmPi2Te4GYTRHhtTVXTVF_nbEH5Y-9U3Cy_b9bqoQUT_r4aUAAfs_Uj6Qh4aD5c1gUAAM0qJ3qAu6Eha9Nr9hkxJUZEQq47JNfn3cfI');"></div>
                            <div>
                                <p class="text-sm font-bold text-white">Hassam Javed</p>
                                <p class="text-xs text-[#9dabb8]">Admin</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </aside>
        
        <!-- Main Content -->
        <main class="flex-1 flex flex-col h-full overflow-hidden relative">
            @RenderBody()
        </main>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>