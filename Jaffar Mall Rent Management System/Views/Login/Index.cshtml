@model Jaffar_Mall_Rent_Management_System.Models.ViewModels.LoginViewModel
@{
    Layout = "_Layout_Blank";
    ViewData["Title"] = "Login Page";
}

<div class="relative flex h-auto min-h-screen w-full flex-col bg-background-light dark:bg-background-dark group/design-root overflow-x-hidden">
    <div class="layout-container flex h-full grow flex-col">
        <div class="flex flex-1 justify-center items-center">
            <div class="layout-content-container flex flex-col lg:flex-row max-w-6xl w-full flex-1 rounded-xl overflow-hidden shadow-lg bg-white dark:bg-[#1c2126]">
                <!-- Left Pane -->
                <div class="w-full lg:w-1/2 p-8 lg:p-12 flex flex-col justify-center items-center lg:items-start text-center lg:text-left">
                    <div class="flex flex-col gap-6">
                        <h1 class="text-slate-900 dark:text-white text-4xl font-black leading-tight tracking-[-0.033em] sm:text-5xl">
                            Manage Your Properties with Ease
                        </h1>
                        <h2 class="text-slate-600 dark:text-[#9dabb8] text-base font-normal leading-normal sm:text-lg">
                            Securely access your account and simplify your management tasks.
                        </h2>
                        <div class="mt-4 w-full bg-center bg-no-repeat aspect-video bg-cover rounded-xl" data-alt="Abstract architectural lines on a blue background" style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuA9uelGy9FB_XvlnbWu99NeYzZ3to3EEFnXKCK7sfkPkjfbyacrrz_PJl97dQ14-DFoqebbDyxOiPou73Cu_vPRIC2geQxo1l58R8pQijTuF5QqXhJ0PCJm-gRgESpiMrg4E7hU37stZR_x70o8bb7TDTBQUJ9jMpV5EIOiVVA8id08FPMXg0peIIjQnp0v9V6SSIvXUdHrdf-kFO7NL_56ektF1R0E7chjdP0wmIDqixSaG_ko60wC6Cv97-yG5gvPT_AGuVbcdERM");'></div>
                    </div>
                </div>
                <!-- Right Pane -->
                <div class="w-full lg:w-1/2 p-8 lg:p-12 flex flex-col justify-center bg-background-light dark:bg-background-dark">
                    <div class="w-full max-w-md mx-auto">
                        <div class="flex flex-col gap-8">
                            <div class="text-left">
                                <h3 class="text-2xl font-bold text-slate-900 dark:text-white">Log in to your account</h3>
                            </div>
                            <form asp-action="Index" asp-controller="Login" method="post" class="flex flex-col gap-6">
                                <div class="flex flex-col gap-4">
                                    <label class="flex flex-col min-w-40 flex-1">
                                        <p class="text-slate-700 dark:text-white text-sm font-medium leading-normal pb-2">Username</p>
                                        <div class="relative flex w-full items-center">
                                            <span class="material-symbols-outlined absolute left-4 text-slate-400 dark:text-[#9dabb8]">mail</span>
                                            <input asp-for="@Model.Username" class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-slate-900 dark:text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-slate-300 dark:border-[#3c4753] bg-white dark:bg-[#1c2126] focus:border-primary h-12 placeholder:text-slate-400 dark:placeholder:text-[#9dabb8] pl-11 pr-4 py-2 text-base font-normal leading-normal" placeholder="you@example.com" type="text" value="" />
                                        </div>
                                    </label>
                                    <label class="flex flex-col min-w-40 flex-1">
                                        <p class="text-slate-700 dark:text-white text-sm font-medium leading-normal pb-2">Password</p>
                                        <div class="relative flex w-full items-center">
                                            <span class="material-symbols-outlined absolute left-4 text-slate-400 dark:text-[#9dabb8]">lock</span>
                                            <input asp-for="@Model.Password" class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-slate-900 dark:text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-slate-300 dark:border-[#3c4753] bg-white dark:bg-[#1c2126] focus:border-primary h-12 placeholder:text-slate-400 dark:placeholder:text-[#9dabb8] pl-11 pr-4 py-2 text-base font-normal leading-normal" placeholder="Enter your password" type="password" value="" />
                                        </div>
                                    </label>
                                </div>
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center gap-2">
                                        <input asp-for="@Model.RememberMe" class="form-checkbox h-4 w-4 rounded border-slate-300 dark:border-[#3c4753] text-primary focus:ring-primary bg-background-light dark:bg-[#1c2126]" id="remember-me" type="checkbox" />
                                        <label class="text-sm text-slate-600 dark:text-[#9dabb8]" for="remember-me">Remember me</label>
                                    </div>
                                    <p class="text-primary text-sm font-medium leading-normal underline cursor-pointer">Forgot Password?</p>
                                </div>
                                <div class="flex flex-col gap-4">
                                    <button class="flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-12 px-5 flex-1 bg-primary text-white text-base font-bold leading-normal tracking-[0.015em] hover:bg-primary/90 transition-colors duration-200">
                                        <span class="truncate">Log In</span>
                                    </button>
                                    <p class="text-slate-600 dark:text-[#9dabb8] text-sm font-normal leading-normal text-center">Don't have an account? <span class="font-medium text-primary underline cursor-pointer">Sign up</span></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>