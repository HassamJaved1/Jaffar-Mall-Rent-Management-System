<!DOCTYPE html>
<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Add New Tenant - RentManager</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#197fe6",
                        "background-light": "#f6f7f8",
                        "background-dark": "#111921",
                        "surface-dark": "#1c232d",
                        "border-dark": "#3c4753",
                        "text-secondary": "#9dabb8"
                    },
                    fontFamily: { "display": ["Inter", "sans-serif"] },
                },
            },
        }
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #111921;
        }

        ::-webkit-scrollbar-thumb {
            background: #3c4753;
            border-radius: 4px;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-white overflow-hidden">
    <div class="flex h-screen w-full overflow-hidden">
        <main class="flex-1 flex flex-col h-full overflow-hidden relative">
            <header class="w-full bg-background-light dark:bg-background-dark border-b border-border-dark shrink-0 z-10">
                <div class="max-w-5xl mx-auto px-6 py-5 flex flex-wrap items-center justify-between gap-4">
                    <div>
                        <h1 class="text-2xl md:text-3xl font-black leading-tight tracking-tight text-slate-900 dark:text-white">Add New Tenant</h1>
                        <p class="text-slate-500 dark:text-text-secondary text-sm mt-1">Register a new tenant to the system.</p>
                    </div>
                    <div class="flex gap-3">
                        <button onclick="window.history.back()" class="px-4 py-2 rounded-lg border border-slate-300 dark:border-border-dark text-slate-700 dark:text-white font-bold text-sm hover:bg-slate-100 dark:hover:bg-surface-dark transition-colors">
                            Cancel
                        </button>
                        <button id="btnSaveTenant" class="px-5 py-2 rounded-lg bg-primary hover:bg-blue-600 text-white font-bold text-sm shadow-lg shadow-blue-500/20 transition-all flex items-center gap-2">
                            <span class="material-symbols-outlined text-[18px]">save</span>
                            Save Tenant
                        </button>
                    </div>
                </div>
            </header>

            <div class="flex-1 overflow-y-auto p-6">
                <div class="max-w-5xl mx-auto flex flex-col gap-6 pb-20">
                    <div class="grid grid-cols-1">
                        <div class="flex flex-col gap-6">

                            <div class="bg-white dark:bg-surface-dark rounded-xl p-6 border border-slate-200 dark:border-border-dark shadow-sm">
                                <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-5 pb-3 border-b border-slate-100 dark:border-border-dark">General Information</h3>
                                <div class="flex flex-col gap-5">
                                    <label class="flex flex-col gap-1.5 w-full">
                                        <span class="text-slate-700 dark:text-white text-sm font-medium">Full Name</span>
                                        <input id="Name" class="w-full rounded-lg border border-slate-300 dark:border-border-dark bg-slate-50 dark:bg-[#111418] text-slate-900 dark:text-white px-4 py-3 text-sm focus:ring-1 focus:ring-primary focus:border-primary outline-none transition-all" placeholder="John Doe" type="text" />
                                    </label>
                                    <label class="flex flex-col gap-1.5 w-full">
                                        <span class="text-slate-700 dark:text-white text-sm font-medium">Mobile Number</span>
                                        <input id="Phone_No" class="w-full rounded-lg border border-slate-300 dark:border-border-dark bg-slate-50 dark:bg-[#111418] text-slate-900 dark:text-white px-4 py-3 text-sm focus:ring-1 focus:ring-primary focus:border-primary outline-none transition-all" placeholder="+92 334 1234567" type="tel" />
                                    </label>
                                    <label class="flex flex-col gap-1.5 w-full">
                                        <span class="text-slate-700 dark:text-white text-sm font-medium">ID Card Number (CNIC)</span>
                                        <input id="CardNumber" class="w-full rounded-lg border border-slate-300 dark:border-border-dark bg-slate-50 dark:bg-[#111418] text-slate-900 dark:text-white px-4 py-3 text-sm focus:ring-1 focus:ring-primary focus:border-primary outline-none transition-all" placeholder="42101-XXXXXXX-X" type="text" />
                                    </label>
                                    <label class="flex flex-col gap-1.5 w-full">
                                        <span class="text-slate-700 dark:text-white text-sm font-medium">Description / Notes</span>
                                        <textarea id="Description" class="w-full rounded-lg border border-slate-300 dark:border-border-dark bg-slate-50 dark:bg-[#111418] text-slate-900 dark:text-white px-4 py-3 text-sm focus:ring-1 focus:ring-primary focus:border-primary outline-none transition-all resize-none" placeholder="Enter any additional details about the tenant..." rows="4"></textarea>
                                    </label>
                                </div>
                            </div>

                            <div class="bg-white dark:bg-surface-dark rounded-xl p-6 border border-slate-200 dark:border-border-dark shadow-sm">
                                <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-5 pb-3 border-b border-slate-100 dark:border-border-dark">Additional Details</h3>
                                <div class="flex flex-col gap-5">
                                    <label class="flex flex-col gap-1.5 w-full">
                                        <span class="text-slate-700 dark:text-white text-sm font-medium">Permanent Address</span>
                                        <input id="Address" class="w-full rounded-lg border border-slate-300 dark:border-border-dark bg-slate-50 dark:bg-[#111418] text-slate-900 dark:text-white px-4 py-3 text-sm focus:ring-1 focus:ring-primary focus:border-primary outline-none transition-all" placeholder="House #, Street name" type="text" />
                                    </label>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                                        <label class="flex flex-col gap-1.5">
                                            <span class="text-slate-700 dark:text-white text-sm font-medium">City</span>
                                            <input id="City" class="w-full rounded-lg border border-slate-300 dark:border-border-dark bg-slate-50 dark:bg-[#111418] text-slate-900 dark:text-white px-4 py-3 text-sm focus:ring-1 focus:ring-primary focus:border-primary outline-none transition-all" placeholder="City Name" type="text" />
                                        </label>
                                        <label class="flex flex-col gap-1.5">
                                            <span class="text-slate-700 dark:text-white text-sm font-medium">Country</span>
                                            <input id="Country" class="w-full rounded-lg border border-slate-300 dark:border-border-dark bg-slate-50 dark:bg-[#111418] text-slate-900 dark:text-white px-4 py-3 text-sm focus:ring-1 focus:ring-primary focus:border-primary outline-none transition-all" placeholder="Pakistan" type="text" />
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        $(document).ready(function () {
            $("#btnSaveTenant").click(function (e) {
                e.preventDefault();

                // 1. Map UI fields to your C# Tenant Model properties exactly
                const tenantData = {
                    Name: $("#Name").val(),
                    Description: $("#Description").val(),
                    Phone_No: $("#Phone_No").val(),
                    CardNumber: $("#CardNumber").val(),
                    Address: $("#Address").val(),
                    City: $("#City").val(),
                    Country: $("#Country").val()
                };

                // Simple Validation
                if (!tenantData.Name || !tenantData.Phone_No) {
                    alert("Name and Phone Number are required.");
                    return;
                }

                // UI Feedback
                const $btn = $(this);
                const originalContent = $btn.html();
                $btn.prop('disabled', true).addClass('opacity-50 text-slate-300').text('Processing...');

                // 2. AJAX Request
                $.ajax({
                    url: '/Tenant/AddTenant', // Ensure your Controller is named TenantController
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(tenantData),
                    success: function (response) {
                        // Print the custom BackendResponse to console
                        console.log("Server Response:", response);

                        if (response.code === 200) {
                            alert(response.message);
                            // Clear inputs on success
                            $("input, textarea").val("");
                        } else {
                            alert("Failed: " + response.message);
                        }
                    },
                    error: function (xhr) {
                        console.error("AJAX Error:", xhr.responseText);
                        alert("An error occurred while communicating with the server.");
                    },
                    complete: function () {
                        // Restore button state
                        $btn.prop('disabled', false).removeClass('opacity-50 text-slate-300').html(originalContent);
                    }
                });
            });
        });
    </script>
</body>
</html>