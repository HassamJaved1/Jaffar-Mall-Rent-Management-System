@using Jaffar_Mall_Rent_Management_System.Models
@using Jaffar_Mall_Rent_Management_System.Models.ViewModels
@model PaginatedViewModel<Tenant>
@{
    ViewData["Title"] = "Tenant List";
}

<!-- Top Header & Actions -->
<header class="w-full bg-white dark:bg-[#111418] border-b border-[#dce0e5] dark:border-[#293038] px-8 py-6 shrink-0 z-10">
    <div class="flex flex-col gap-6 max-w-[1400px] mx-auto">
        <!-- Title and Subtitle -->
        <div class="flex flex-col sm:flex-row sm:items-end justify-between gap-4">
            <div class="flex flex-col gap-1">
                <h1 class="text-[#111418] dark:text-white text-3xl font-black leading-tight tracking-[-0.033em]">All Tenants</h1>
                <p class="text-[#637588] dark:text-[#9dabb8] text-base font-normal">Manage your tenants, view contact details and lease information.</p>
            </div>
            <!-- Add Tenant Button -->
            <div class="flex items-center gap-3">
                <a href="@Url.Action("AddTenant", "Tenant")" class="flex items-center justify-center rounded-lg h-10 px-4 bg-primary text-white text-sm font-bold leading-normal tracking-[0.015em] hover:bg-blue-600 transition-colors shadow-lg shadow-blue-500/20">
                    <span class="material-symbols-outlined text-[20px] mr-2">person_add</span>
                    <span class="truncate">New Tenant</span>
                </a>
            </div>
        </div>
        <!-- Search and Filters Bar -->
        <div class="flex flex-col lg:flex-row gap-4 justify-between items-start lg:items-center">
        <!-- Search -->
        <form method="get" class="relative w-full lg:max-w-[480px]">
            <div class="flex w-full items-center rounded-lg h-12 bg-[#f0f2f4] dark:bg-[#293038] focus-within:ring-2 focus-within:ring-primary/50 transition-shadow">
                <button type="submit" class="flex items-center justify-center pl-4 pr-2 outline-none">
                    <span class="material-symbols-outlined text-[#637588] dark:text-[#9dabb8]">search</span>
                </button>
                <input name="search" value="@(ViewBag.CurrentSearch ?? "")" class="w-full bg-transparent border-none text-[#111418] dark:text-white placeholder:text-[#637588] dark:placeholder:text-[#9dabb8] focus:ring-0 text-base h-full" placeholder="Search tenants by name or phone..." />
            </div>
        </form>
            <!-- Filter Chips (Placeholder for now) -->
            <div class="flex flex-wrap gap-2">
                <button class="flex h-9 items-center justify-center gap-x-2 rounded-lg bg-[#f0f2f4] dark:bg-[#293038] px-4 hover:bg-[#e1e4e8] dark:hover:bg-[#3e4854] transition-colors border border-transparent dark:border-[#3e4854]">
                    <span class="material-symbols-outlined text-[#111418] dark:text-white text-[20px]">sort</span>
                    <p class="text-[#111418] dark:text-white text-sm font-medium">Sort by: Name</p>
                </button>
            </div>
        </div>
    </div>
</header>
<!-- Scrollable List Area -->
<div class="flex-1 overflow-y-auto p-4 sm:p-8">
    <div id="tenant-list-container">
        <partial name="_TenantListPartial" model="Model" />
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function () {
        let debounceTimer;
        const searchInput = document.querySelector('input[name="search"]');
        const listContainer = document.getElementById('tenant-list-container');
        const form = searchInput.closest('form');

        // Prevent default form submission on enter
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            performSearch(searchInput.value);
        });

        searchInput.addEventListener('input', function (e) {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => {
                performSearch(e.target.value);
            }, 300); // 300ms debounce
        });

        function performSearch(query) {
            const url = new URL(window.location.origin + '@Url.Action("Index", "Tenant")');
            if (query) {
                url.searchParams.set('search', query);
            }
            url.searchParams.set('page', 1); // Reset to page 1 on search

            // Update browser history
            window.history.pushState({}, '', url);

            // Fetch data
            fetch(url, {
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => {
                if (!response.ok) throw new Error('Network response was not ok');
                return response.text();
            })
            .then(html => {
                listContainer.innerHTML = html;
                currentOpenDropdown = null;
            })
            .catch(error => console.error('Error fetching tenants:', error));
        }

        // Dropdown Logic
        let currentOpenDropdown = null;

        window.toggleDropdown = function(event, id) {
            event.stopPropagation();
            const dropdown = document.getElementById('dropdown-' + id);
            
            // Close currently open if different
            if (currentOpenDropdown && currentOpenDropdown !== dropdown) {
                currentOpenDropdown.classList.add('hidden');
            }
            
            if (dropdown.classList.contains('hidden')) {
                dropdown.classList.remove('hidden');
                currentOpenDropdown = dropdown;
            } else {
                dropdown.classList.add('hidden');
                currentOpenDropdown = null;
            }
        };

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            if (currentOpenDropdown) {
                currentOpenDropdown.classList.add('hidden');
                currentOpenDropdown = null;
            }
        });

        window.deleteTenant = async function(id) {
             try {
                 const response = await fetch('/Tenant/DeleteTenant?id=' + id, { 
                     method: 'DELETE',
                     headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                     }
                 });
                 
                 const result = await response.json();
                 
                 if (response.ok && result.code === 200) { 
                     // Refresh the list
                     performSearch(document.querySelector('input[name="search"]').value); 
                 } else {
                     alert('Failed to delete tenant: ' + (result.message || 'Unknown error'));
                 }
             } catch (error) {
                 console.error('Error:', error);
                 alert('An error occurred while deleting the tenant.');
             }
        };
    });
</script>
}
